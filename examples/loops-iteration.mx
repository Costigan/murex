#!/usr/bin/env murex

# Idiomatic way of iterating in murex

out "Iteration over a foreach loop:"

a: [0..4] -> foreach i {
    out "Iteration $i...."
}


# While loop

out "Iteration over a while loop:"

let i=0
while { eval i < 5 } {
    out "Iteration $i...."
    let i++
}


# Traditional for loop

out "Iteration over a for loop:"

for { i=0; i<5; i++ } {
    out "Iteration $i...."
}