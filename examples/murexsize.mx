#!/usr/bin/env murex

set: name=murex
try {
    ls -lh @{which: murex} -> regex: f/[0-9.]+M/ -> set: size
    # The above line is equivalent to the follow:
    # which: $name -> set path
    # ls -lh $path -> regex f/[0-9.]+M/ -> set size
    out: "This executable is $size big!"
} ->
catch {
    out: "`$name` not found in \$PATH"
}
